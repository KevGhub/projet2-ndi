<h2>Requête </h2>

<ul>
  <li>
    <h4>{{reqDoc.category}}</h4>
    <h3>{{reqDoc.title}}</h3>
    <br>
    <p>{{reqDoc.goal}}</p>
    <br>
    <p>{{reqDoc.description}}</p>
    <br>
    <p>{{reqDoc.place}}</p>
    <br>
    <img src="{{reqDoc.img}}" alt="Requête photo">



    <p>


      <form method="POST" action="/requete-detail/{{reqDoc._id}}/vote">
        <button class="badge badge-dark">Votez pour cette requête</button>
      </form>
      <p>Votes: <a id="clicks">{{reqDoc.numberOfVote}}</a></p>
    </p>

  </li>

</ul>





