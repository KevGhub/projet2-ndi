<h3>Mon Doux Compte</h3>

<hr>

<div class="user-info">
  <p>Bienvenue <b>{{userDoc.pseudo}}</b> !</p>
  <div><img src="{{userDoc.profileImg}}" alt=""></div>
  <br>
  <b>{{userDoc.firstName}}</b> , <b>{{userDoc.lastName}}</b>
</div>



{{#if reqUser.length}}
  <h4>Mes requêtes</h4>
  {{#each reqUser}}
     <div class="user-req"> 
        <h3>{{this.title}}</h3>
        <br>
        <p>{{this.goal}}</p>
        <br>
        <img src="{{this.img}}" alt="Requête photo">
        <br>
        <a href="/requete-detail/{{this._id}}">Voir la requête</a>
        <br>
      <a href="/nouvelle-requete">Créer une requête</a>
    </div>
    {{/each}}
  {{/if}}

  


